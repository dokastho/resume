{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Make binaries",
            "command": "make",
            "args": [
                "clean",
                "tag_server"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compile the tag_server binary"
        },
        {
            "type": "shell",
            "label": "tagserver_start",
            "command": "./tag_server",
            "args": [
                "8888"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn":[
                "Make binaries"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                {
                  "pattern": [
                    {
                      "regexp": ".",
                      "file": 1,
                      "location": 2,
                      "message": 3
                    }
                  ],
                  "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": ".",
                  }
                }
              ],
            "detail": "Start the tag_server"
        },
        {
            "type": "shell",
            "label": "siterun",
            "command": "./bin/siterun",
            "dependsOn":[
                "tagserver_start"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Run the entire site"
        }
    ],
    "version": "2.0.0"
}