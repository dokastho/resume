{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Make binaries",
            "command": "make",
            "args": [
                "clean",
                "tag_server"
            ],
            "options": {
                "cwd": "${cwd}/rsite/api/"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compile the tag_server binary"
        },
        {
            "type": "process",
            "label": "Tag Server",
            "isBackground": true,
            "command": "./tag_server",
            "args": [
                "8888"
            ],
            "options": {
                "cwd": "${cwd}/rsite/api/"
            },
            "dependsOn":[
                "Make binaries"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Start the tag server",
            "problemMatcher": [
                {
                  "pattern": [
                    {
                      "regexp": ".",
                      "file": 1,
                      "location": 2,
                      "message": 3
                    }
                  ],
                  "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": ".",
                  }
                }
              ]
        },
        {
            "type": "shell",
            "label": "Resume Site Run",
            "command": "./bin/siterun",
            "dependsOn":[
                "Tag Server"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Run the entire site"
        },
        {
            "type": "shell",
            "label": "DB reset",
            "command": "./bin/sitedb",
            "args": [
                "reset",
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true
            },
            "detail": "Reset the sqlite database"
        },
        {
            "type": "shell",
            "label": "React Build",
            "command": "./bin/build",
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true
            },
            "detail": "Reset the sqlite database"
        },
        {
            "type": "shell",
            "label": "flask",
            "command": ["pkill", "flask"],
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true
            },
            "detail": "stop flask"
        },
        {
            "type": "shell",
            "label": "Stop server",
            "command": ["pkill", "tag_server"],
            "dependsOn": "flask",
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true
            },
            "detail": "Stop the two server processes."
        },
    ],
    "version": "2.0.0"
}